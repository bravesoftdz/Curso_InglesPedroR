procedure TCurso.Image11DragDrop(Sender, Source: TObject; X, Y: Integer);
begin
  (Sender as TImage).Picture.Assign((Source as Timage ).Picture);
end;

procedure TCurso.Image11DragOver(Sender, Source: TObject; X, Y: Integer;
  State: TDragState; var Accept: Boolean);
begin
     if (Sender = image14 ) and (Source = image11) then
    begin
      Accept := true;
      end
         {ShowMessage('muy bien');}
             else

    accept:=false;
      { ShowMessage('muy mal');}


end;



