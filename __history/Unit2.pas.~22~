end;

procedure TCurso.Image22DragOver(Sender, Source: TObject; X, Y: Integer;
  State: TDragState; var Accept: Boolean);
begin
 if (Sender = image10 ) and (Source = image22) then
    begin
      Accept := true;
         {ShowMessage('muy bien');}
      end
         {ShowMessage('muy bien');}
             else

    accept:=false;
      { ShowMessage('muy mal');}
end;

procedure TCurso.Image5DragDrop(Sender, Source: TObject; X, Y: Integer);
begin
 (Sender as TImage).Picture.Assign((Source as Timage ).Picture);
end;

