procedure TCurso.Panel5DragOver(Sender, Source: TObject; X, Y: Integer;
  State: TDragState; var Accept: Boolean);
begin
if Source is TPanel then

    begin
      Accept := True;
     end
         {ShowMessage('muy bien');}
             else

    accept:=false;
      { ShowMessage('muy mal');}
end;

procedure TCurso.Pnl4PClick(Sender: TObject);
begin
with PnlFondo4 do
pnl4P.Visible:=true;
Pnl4P2.Visible:=true;
end;

